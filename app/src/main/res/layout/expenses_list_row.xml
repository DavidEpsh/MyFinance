<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_parent_row"
    android:background="@drawable/btn_global_ginger"
    android:orientation="horizontal"
    >

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:layout_centerVertical="true"
        android:id="@+id/image_view_expense_image"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/linear_layout_name_and_buttons"
        android:paddingTop="10dp"
        android:paddingLeft="@dimen/default_margin"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:orientation="vertical"

        android:layout_toLeftOf="@+id/item_parent_row"
        android:layout_toRightOf="@+id/image_view_expense_image"
        android:layout_toEndOf="@+id/image_view_expense_image"
        android:layout_weight="4">

        <TextView
            android:id="@+id/text_view_expense_name_row"
            android:layout_width="wrap_content"
            android:textSize="22sp"
            android:paddingBottom="5dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/text_expense_amount_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:orientation="vertical"
        android:id="@+id/linearLayout"
        android:padding="16dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/text_view_expense_date_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"/>
        <CheckBox
            android:id="@+id/checkbox_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:focusable="false"/>

    </LinearLayout>
</LinearLayout>